/*----MORRA----*/

@import url('reset.css');

/*----MAIN LAYOUT----*/

body {
	background: #f2f2f2 url('/fondevi/img/mr_bg_stripe.png') repeat-x;
	font-family: helvetica, arial, sans-serif;
	font-size: 14px;
	line-height: 20px;
	color: #464646;
}

a:link {
	color: #111;
}

a:link, a:hover {
	text-decoration: none;
}

/*----CLEAR & ALIGNMENT----*/

.clearFix {
	clear: both;
}

.alignLeft {
	float: left !important;
}

.alignRight {
	float: right !important;
}

.isHidden {
	display: none;
}

.isBlock {
	display: block;
}

.isInline {
	display: inline;
}

.isLast {
	margin-bottom: 0;
}

/*----COLOR SETTING----*/

#mr_Canvas.isHome div.adjustBG { background-color: #f68c14; }
#mr_Canvas.isHome a:hover, #mr_Canvas.isHome a.isSelected { color: #f68c14;}

#mr_Canvas.isAbout div.adjustBG { background-color: #c14499; }
#mr_Canvas.isAbout a:hover, #mr_Canvas.isAbout a.isSelected { color: #c14499;}
#mr_Canvas.isAbout div.adjustBlockBG { background-color: #af3c8b; }

#mr_Canvas.isServices div.adjustBG { background-color: #4cc2c5; }
#mr_Canvas.isServices a:hover, #mr_Canvas.isServices a.isSelected { color: #4cc2c5;}
#mr_Canvas.isServices div.adjustBlockBG { background-color: #43a8ab; }

#mr_Canvas.isPartners div.adjustBG { background-color: #97b93d; }
#mr_Canvas.isPartners a:hover, #mr_Canvas.isPartners li.isSelected a { color: #97b93d;}
#mr_Canvas.isPartners div.adjustBlockBG { background-color: #8ba93e; }

#mr_Canvas.isCareer div.adjustBG { background-color: #ed7464; }
#mr_Canvas.isCareer a:hover, #mr_Canvas.isCareer a.isSelected { color: #ed7464;}
#mr_Canvas.isCareer div.adjustBlockBG { background-color: #8ba93e; }

#mr_Canvas.isContact div.adjustBG { background-color: #875bab; }
#mr_Canvas.isContact a:hover, #mr_Canvas.isContact a.isSelected { color: #875bab;}
#mr_Canvas.isContact div.adjustBlockBG { background-color: #8051a6; }

/*----TYPOGRAPHY----*/

h1, h2, h3, h4, h5, h6 {
	font-family: helvetica, arial, san-serif;
	color: #fff;
	margin-bottom: 40px;
}

h1 {
	font-size: 48px;
	line-height: 60px;
}

h2 {
	font-size: 34px;
	line-height: 40px;
}

h3 {
	font-size: 24px;
	line-height: 30px;
	font-weight: bold;
	margin-bottom: 30px;
}

h5 {
	font-size: 13px;
	font-weight: bold;
	margin-bottom: 10px;
}

h6 {
	font-size: 14px;
	font-weight: bold;
	margin-bottom: 10px;
}

p {
	font-size: 14px;
	line-height: 20px;
	color: #fff;
	margin-bottom: 30px;
}

.lowMargin {
	margin-bottom: 10px;
}

/*----HEADER----*/

#mr_Header, #mr_Body {
	width: 1000px;
	margin: auto;
}

#mr_Header {
	margin: 30px auto;
}

#mr_Logo {
	float: left;
	width: 80px;
	height: 80px;
	margin-left: 30px;
}

#mr_Navigation {
	float: right;
	margin: 60px 0 10px 0;
}

#mr_Navigation li {
	font-size: 11px;
	line-height: 14px;
	display: inline;
	float: left;
	margin: 0 10px;
	text-transform: uppercase;
}

/*----BODY----*/

.mr_LeftColumn {
	width: 500px;
	float: left;
}

.mr_RightColumn {
	width: 460px;
	float: right;
	margin-left: 40px;
}

.mr_Block {
	padding: 35px;
	margin-bottom: 40px;
	
	box-shadow: 5px 5px 5px #cccccc;
	-moz-box-shadow: 5px 5px 5px #cccccc;
	-webkit-box-shadow: 5px 5px 5px #cccccc;

	/* For IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=90, Color='#cccccc')";
	/* For IE 5.5 - 7 */
	filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=90, Color='#cccccc');
}

.mr_Block.isSetHeight {
	height: 450px;
}

.mr_Address {
	background-color: #858585;
	color: #fff;
}

.mr_Address a:link, .mr_Address a:hover {
	color: #fff;
	font-weight: bold;
}

#mr_SocMedList {
	float: right;
	width: 180px;
}

#mr_SocMedList li {
	margin-bottom: 10px;
	line-height: 32px;
	padding-left: 34px;
}

#mr_SocMedList li.isFacebook {
	background: url('/fondevi/img/icon/socmed_30.png') no-repeat 0 0;
}

#mr_SocMedList li.isTwitter {
	background: url('/fondevi/img/icon/socmed_30.png') no-repeat 0 -30px;
}

/*----FOOTER----*/

#mr_Footer {
	text-transform: uppercase;
	position: fixed;
	bottom: 0;
	background: url('/fondevi/img/mr_bg.png') repeat-x;
	height: 165px;
	width: 100%;
	overflow: none;
	z-index: -1000;
	margin-bottom: 26px;
}

#mr_Footnote {
	width: 100%;
	height: 20px;
	margin-bottom: -26px;
	overflow: hidden;
	position: absolute;
	bottom: 0;
	background-color: #f2f2f2;
	padding: 2px 0;
	font-size: 10px;
}

#mr_Footnote span {
	margin: 0 10px;
}
